{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6", "ES2015", "dom"],
        "outDir": "lib",
        "rootDir": "src",
        "types": ["node"],
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "downlevelIteration": true
    },
    "exclude": ["node_modules","lib","templates"]
}